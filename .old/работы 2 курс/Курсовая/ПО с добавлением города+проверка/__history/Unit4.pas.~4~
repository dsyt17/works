procedure TForm4.BitBtn1Click(Sender: TObject);
  begin
  if Opendialog1.execute then
      begin
        image1.picture.loadfromfile(opendialog1.filename);
      end;
  end;

procedure TForm4.BitBtn2Click(Sender: TObject);
var
j: tjpegimage;
b: tbitmap;
begin
adoquery1.sql.add('INSERT INTO Город (Название_города, Описание, Страна, [Размер города]) VALUES ('+edit1.text+','+edit1.text+','+Combobox1.text+','+Combobox2.text+','+
                  '(SELECT Город.Название_города, Город.Описание, Страна.Название, Размеры_городов.Размер, Инфраструктура.Название_инф'+
                  'FROM (Страна INNER JOIN (Размеры_городов INNER JOIN Город ON Размеры_городов.[idSize] = '+'Город.[Размер города]) ON Страна.[idCountry] = Город.[Страна]) INNER JOIN (Инфраструктура INNER JOIN Инфраструктура_город ON Инфраструктура.[idR] = Инфраструктура_город.[idR]) ON Город.[idCity] = Инфраструктура_город.[idCity];);');
adoquery1.open;
{adoquery1.insert;
adoquery1['Название_города']:=edit1.text;
adoquery1['Страна']:=Combobox1.text;
adoquery1['Размер']:=Combobox2.text;
adoquery1['Описание']:='sdds';
if checkbox25.Checked=true then adoquery1['Название_инф']:=checkbox25.caption;
if checkbox26.Checked=true then adoquery1['Название_инф']:=checkbox26.caption;
if checkbox27.Checked=true then adoquery1['Название_инф']:=checkbox27.caption;
if checkbox28.Checked=true then adoquery1['Название_инф']:=checkbox28.caption;
if checkbox29.Checked=true then adoquery1['Название_инф']:=checkbox29.caption;
if checkbox30.Checked=true then adoquery1['Название_инф']:=checkbox30.caption;
if checkbox31.Checked=true then adoquery1['Название_инф']:=checkbox31.caption;
if checkbox32.Checked=true then adoquery1['Название_инф']:=checkbox32.caption;
if checkbox33.Checked=true then adoquery1['Название_инф']:=checkbox33.caption;

{if extractfileext(opendialog1.filename)='.bmp' then
TBlobField(adoquery1.fieldbyname('Фото')).assign(image1.picture)
else
begin
  j:=tjpegimage.create;
  try
     j.compressionquality:=100;
     j.loadfromfile(opendialog1.filename);
     b:=tbitmap.create;
     try
      b.assign(j);
      tblobfield(adoquery1.fieldbyname('Фото')).assign(b);
      finally
      b.free
     end;
      finally
     j.Free
  end;

end; }
adoquery1.Post;
end;



procedure TForm4.Button1Click(Sender: TObject);
begin
form4.Close;
end;





procedure TForm4.DBGrid1TitleClick(Column: TColumn);
begin
 adoquery1.sort:=column.Field.Fieldname;
end;

procedure TForm4.FormActivate(Sender: TObject);
    begin
    with  ADOquery2 do
    begin
    DisableControls;
    ComboBox1.Items.BeginUpdate;
    First;
       while not Eof do
          begin
           ComboBox1.Items.Add(FieldByName('Название').AsString);
           Next;
          end;
    ComboBox1.Items.EndUpdate;
    EnableControls;
    end;
    end;

end.

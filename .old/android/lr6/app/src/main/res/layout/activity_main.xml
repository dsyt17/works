<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:orientation="vertical"
    >

    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:orientation="vertical"
        >

        <TextView
            a:id="@+id/header_main"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:gravity="center"
            a:text="@string/info"
            a:textAlignment="center"
            a:textSize="30sp"
            a:layout_margin="10dp"
            />
        <LinearLayout
            a:id="@+id/search_layout"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:visibility="gone"
            >

            <EditText
                a:id="@+id/search_bar"
                a:layout_width="0dp"
                a:layout_height="wrap_content"
                a:layout_margin="10dp"
                a:layout_weight="1"
                a:hint="@string/search_edit_text"
                a:minHeight="48dp"
                a:importantForAutofill="no" />
            <Button
                a:id="@+id/search_button"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:text="@string/search"
                a:layout_margin="10dp"
                />
        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        a:id="@+id/recycler_view"
        a:layout_width="match_parent"
        a:layout_height="0dp"
        a:layout_weight="1"
        a:layout_marginHorizontal="10dp"

        />
    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:orientation="horizontal"

        >
        <LinearLayout
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:orientation="horizontal"
            a:layout_weight="3"
            >

            <Button
                a:id="@+id/add_button"
                a:layout_width="match_parent"
                a:layout_height="wrap_content"
                a:onClick="onClickAddButtonMain"
                a:clickable="true"
                a:focusable="true"
                a:text="@string/add"
                a:layout_marginStart="5dp"
                a:layout_weight="1"
                a:textSize="11dp"
                />

            <Button
                a:id="@+id/sort_button"
                a:layout_width="match_parent"
                a:layout_height="wrap_content"
                a:clickable="true"
                a:focusable="true"
                a:text="@string/sort"
                a:layout_marginStart="5dp"
                a:layout_weight="1"
                a:textSize="11dp"
                />

            <Button
                a:id="@+id/price_button"
                a:layout_width="match_parent"
                a:layout_height="wrap_content"
                a:clickable="true"
                a:focusable="true"
                a:text="@string/price2"
                a:layout_marginStart="5dp"
                a:layout_marginEnd="5dp"
                a:layout_weight="1"
                a:textSize="11dp"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>